<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th><%= Lunch.human_attribute_name(:day) %></th>
    <th><%= Lunch.human_attribute_name(:food) %></th>
    <th><%= Lunch.human_attribute_name(:calories) %></th>
    <th><%= Lunch.human_attribute_name(:delicious) %>?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lunches.each do |lunch| %>
  <tr>
    <td><%= I18n.l lunch.day, format: :diary_format %></td>
    <td><%= lunch.food %></td>
    <td><%= lunch.calories %></td>
    <td><%= lunch.delicious %></td>
    <td><%= link_to 'Show', lunch %></td>
    <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
    <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

