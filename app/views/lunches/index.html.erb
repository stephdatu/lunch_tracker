<h1>My Lunch Tracker</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Food</th>
    <th>Calories</th>
    <th>Delicious?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lunches.each do |lunch| %>
  <tr>
    <td><%= lunch.day %></td>
    <td><%= lunch.food %></td>
    <td><%= lunch.calories %></td>
    <td><%= lunch.delicious %></td>
    <td><%= link_to 'Show', lunch %></td>
    <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
    <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

