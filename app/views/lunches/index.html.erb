<h1><%= t ".title" %></h1>

<table>
  <tr>
    <th><%= Lunch.human_attribute_name(:day) %></th>
    <th><%= Lunch.human_attribute_name(:food) %></th>
    <th><%= Lunch.human_attribute_name(:calories) %></th>
    <th><%= Lunch.human_attribute_name(:delicious) %>?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lunches.each do |lunch| %>
  <tr>
    <td><%= l lunch.day, format: :diary_format %></td>
    <td><%= lunch.food %></td>
    <td><%= lunch.calories %></td>
    <td><%= t(lunch.delicious.to_s) %></td>
    <td><%= link_to t("navigation.show"), lunch %></td>
    <td><%= link_to t("navigation.edit"), edit_lunch_path(lunch) %></td>
    <td><%= link_to t("navigation.destroy"), lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to link_to t("navigation.new_lunch"), new_lunch_path %>
